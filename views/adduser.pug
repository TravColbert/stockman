extends index.pug

block content
  .layout-col
    .section-hdg.section-hdg-1 Add User
    .user-listing.layout-col
      form(action="/user" method="post")
        .username.itemdetail.layout-row
          .label User Name: 
          .data
            input(id="username" type="text" name="username" placeholder="user name" required)
        .userpassword.itemdetail.layout-row
          .label Password: 
          .data
            input(id="password" type="password" name="password" placeholder="password" required)
        .userpasswordverify.itemdetail.layout-row
          .label Verification: 
          .data
            input(id="passwordv" type="password" name="passwordv" placeholder="password" required)
        .usersubmit.itemdetail.layout-row
          .label Actions:
          .data
            input.btn.btn-normal.buttonconfirm(type="submit" id="submit" value="Confirm")
            a.btn.btn-cancel.buttoncancel(href="/users/") Cancel
