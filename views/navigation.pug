header.layout-row.layout-width-1-1
  nav#topmenu.nav.layout-xs-col.layout-width-1-1.layout-sm-justify-end(role=navigation)
    #menu-title.layout-row.layout-justify-between
      div#app-title
        a(href="/")= title
      label#menu-hamburger.layout-justify-end(for="show-menu") &#9776;
    input#show-menu(type="checkbox" role="button")
    form#search(action="/search" method="get").layout-row
      input#q(type="text" name="q")
      input.btn.btnsearch(type="submit" id="submit" value="s")
    ul.layout-xs-hidden.layout-xs-col.layout-row.layout-sm-size-x2.layout-size-x1.layout-justify-around
      - let m = menu;
      each item in m
        - var link = item.link;
        - var text = item.text;
        li.layout-size-x1
          a(href=link).layout-width-1-1.layout-row.layout-sm-col.layout-align-center.layout-xs-justify-start.layout-justify-center.text-xs-grow-x2
            i.material-icons.menu-icon #{item.icon}
            //- i.la(class="la-" + item.icon)
            .nobreak.text-sm-shrink-x3 #{text}
