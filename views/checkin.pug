extends index.pug

block content
  .section-hdg.section-hdg-1 Check-In Part
  .part-listing.layout-col
    form(action="/part/checkinverified" method="post")
      input(type="hidden" name="partid" id="partid" value=part.id)
      #prompt.section-hdg.section-hdg-3 Confirm check-in from case: #{caseId}
      .itemdetail.layout-col
        .label Manufacturer:
        .data #{part.make}
      .itemdetail.layout-col
        .label Part Num:
        .data #{part.partnum}
      .itemdetail.layout-col
        label.label Description:
        .data #{part.description}
      input(type="hidden" name="caseid" id="caseid" placeholder="Case #" value=caseId)
      .itemdetail.layout-col
        .label Actions:
        .data
          input.btn.primary.buttonconfirm(type="submit" id="submit" value="Confirm")
          a.btn.cancel.buttoncancel(href="/part/" + part.id) Cancel