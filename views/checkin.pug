extends index.pug

block content
  .section-hdg.section-hdg-1 Check-In Part
  .layout-row.layout-width-1-1
    .part-listing.layout-col.layout-width-1-1.layout-sd-width-5-8.layout-lg-width-5-8.layout-xl-width-4-8
      form(action="/part/checkinverified" method="post")
        input(type="hidden" name="partid" id="partid" value=part.id)
        #prompt.section-hdg.section-hdg-3 Confirm check-in from case: #{caseId}
        .itemdetail.layout-col
          .label Manufacturer:
          .data #{part.make}
        .itemdetail.layout-col
          .label Part Num:
          .data #{part.partnum}
        .itemdetail.layout-col
          label.label Description:
          .data #{part.description}
        input(type="hidden" name="caseid" id="caseid" placeholder="Case #" value=caseId)
        .itemdetail.layout-col
          .label Actions:
          .data
            input.btn.primary.buttonconfirm(type="submit" id="submit" value="Confirm")
            a.btn.cancel.buttoncancel(href="/part/" + part.id) Cancel
    .description.layout-col.layout-xs-hidden.layout-sm-hidden.layout-md-hidden.layout-sd-width-3-8.layout-lg-width-3-8.layout-xl-width-4-8
      .infotext.section-hdg.section-hdg-3 Check In Part View
      .infotext Use this view to complete the checkout of part #{part.id}
      .infotext Click the confirm button to check the part back in.
