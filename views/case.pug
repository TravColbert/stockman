extends index.pug

block content
  .layout-col Parts Checked-Out to Case #{caseId}
    each part in parts    
      .part-listing.layout-col
        //- .partid Part ID: #{part.id}
        .partnum Part Number: #{part.partnum}
        .partdescription Description: #{part.description}
        .partmake Make: #{part.make}
        .stock-control.layout-col Stock Control
          //- .partcount Stock Level: #{part.count}
          //- .partfree.layout-row
          //-   div Units Available: #{part.free}
          //-   if part.free
          //-     div.checkoutpart
          //-       a.checkout(href="/part/checkout/" + part.id) checkout
          .partused.layout-row
            div Units Checked-out: #{part.used}
            - let cases = part.cases;
            #caselist.layout-row 
              each c in cases
                div
                  a(href="/case/" + c) #{c}
                  if caseId==c
                    a.checkin(href="/part/checkin/" + part.id + "/case/" + c) checkin
          