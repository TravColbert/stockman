extends index.pug

block content
  div.layout-col
    div#partid Part ID: #{part.id}
    div#partnum Manufacturer's Part Number: #{part.partnum}
    div#partdescription Description: #{part.description}
    div#partmake Make: #{part.make}
    div#partcount Stock Level: #{part.count}
    div#partcountfree Units Free: #{part.free}
    div#partcountused Units Used: #{part.used}

    - let cases = part.cases;
    div#test Cases: #{cases}
      each case in cases
        div case
