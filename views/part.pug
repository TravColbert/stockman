extends index.pug

block content
  div.layout-col
    .part-listing.layout-col
      //- .partid Part ID: #{part.id}
      .partnum.layout-row
        div Part Number: #{part.partnum} 
        div
          a.buttonpartedit(href="/part/edit/" + part.id) Edit Part
      .partdescription Description: #{part.description}
      .partmake Make: #{part.make}
      .stock-control.layout-col Stock Control
        .partcount Stock Level: #{part.count}
        .partfree.layout-row
          div Units Available: #{part.free}
          if part.free
            div.checkoutpart
              a.buttonpartcheckout(href="/part/checkout/" + part.id) checkout
        .partused.layout-row
          div Units Checked-out: #{part.used}
          - let cases = part.cases;
          #caselist.layout-row 
            each c in cases
              div
                a(href="/case/" + c) #{c}
                a.buttonpartcheckin(href="/part/checkin/" + part.id + "/case/" + c) checkin
